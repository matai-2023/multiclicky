{
  "name": "jwt-auth",
  "type": "module",
  "description": "An exercise to practice how to apply authentication",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "run-p dev:server dev:client dev:css",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "dev:css": "tailwindcss -i client/styles/main.css -o public/main.css --watch",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db-reset": "run-s db:*",
    "db:delete": "rm server/db/dev.sqlite3",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "NODE_ENV=test vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@sinonjs/fake-timers": "^11.1.0",
    "@tanstack/react-query": "^4.35.3",
    "@types/express-session": "^1.17.8",
    "@vee-validate/zod": "^4.11.6",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "express-jwt": "^8.4.1",
    "express-jwt-authz": "^2.4.1",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "express-session": "^1.17.3",
    "framer-motion": "^10.16.4",
    "jwks-rsa": "^2.1.5",
    "knex": "^2.5.1",
    "kute": "^1.0.0",
    "kute.js": "^2.2.4",
    "nock": "^13.3.3",
    "pg": "^8.11.3",
    "react-explode": "^2.0.5",
    "react-toggle-dark-mode": "^1.1.1",
    "sinon": "^16.0.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.6",
    "update-dotenv": "^1.1.1",
    "use-sound": "^4.0.1",
    "vee-validate": "^4.11.6",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@auth0/auth0-react": "^1.12.1",
    "@devacademy/eslint-config": "^1.9.1",
    "@playwright/test": "^1.38.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^4.17.18",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/sinon": "^10.0.16",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@types/styled-components": "^5.1.26",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.31.4",
    "babel-plugin-styled-components": "^1.12.0",
    "esbuild": "^0.18.16",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.38.0",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.3.1",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead",
  "engines": {
    "node": ">=16.0.0"
  }
}
